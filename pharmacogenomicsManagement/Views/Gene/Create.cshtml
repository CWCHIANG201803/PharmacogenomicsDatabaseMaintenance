@model pharmacogenomicsManagement.Models.Gene

<div class="row orderForm">
    <form asp-controller="Gene" asp-action="Create" method="post" class="form-horizontal" role="form">
        <h3 class="">Create new gene</h3>
        <div class="form-group">
            <label asp-for="GeneName" class="col-md-2 control-label">Name</label>
            <div class="col-md-2">
                <input asp-for="GeneName" class="form-control" placeholder="Enter Gene name" />
                <span asp-validation-for="GeneName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-2">
                <input class="btn btn-group-xs" type="submit" value="Return" asp-controller="Customer" asp-action="List" />
                <input class="btn btn-success" type="submit" value="Create" />
            </div>
        </div>
    </form>
</div>